@using Activote.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Activote</title>
    <meta property="og:image" content="http://activote.us/Content/img/activote-social-thumb.jpg" />
		<meta property="og:description" content="Encourage your friends to vote by posting a selfie" />
		<meta name="description" content="Encourage your friends to vote by posting a selfie">
    
    
    @Styles.Render("~/Content/css/bootstrap.min.css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/main.css")
    
    @RenderSection("styles", required: false)
</head>
<body>
    <div id="main-nav" class="navbar navbar-inverse fixed-top">
        <div>
            <div class="navbar-header">
                <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#main-nav-menu" aria-controls="main-nav-menu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @Html.ActionLink("Activote", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div id="main-nav-menu" class="navbar-collapse collapse">
               <div class="menu-wrapper">
                <ul class="nav navbar-nav">
                    @if (Person.LoggedInPerson != null)
                    {
                        <li>@Html.ActionLink("Action", "Action", "Person")</li>
                        <li>@Html.ActionLink("My Contacts", "Contacts", "Person")</li>
                        <li><a href="#" class="text-nowrap">Logged in as @Person.LoggedInPerson.Name</a></li>
                        <li><a href="~/Person/Logout">Log Off</a></li>
                    }
                    else
                    {
                        <li><a href="~/Person/Login">Login</a></li>
                    }                    
                    <li></li>
                </ul>
                </div>
            </div>          
        </div>
    </div>
    <div class="container-fluid body-content screens-container text-center">
        @RenderBody()
        
    </div>
    @*<hr />*@
    <footer>
        @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
    </footer>
    <input type="hidden" id="SitePath" value="~/" />    
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    @Scripts.Render("~/Content/lib/bootstrap.min.js")

    <script>
        var activoteGlobal = {};
        $(function () {
            activoteGlobal.sitePath = $("#SitePath").val();
            activoteGlobal.personID = @Person.LoggedInPersonID;
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
