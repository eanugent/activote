@model IEnumerable<Activote.Models.State>
@using Activote.Models

<div class="screen-content col-12 col-md-5">
    <div class="message">
        <h1 class="stars">Encourage your friends to vote by posting a selfie.</h1>
        <p>Find the place where you’ll vote. Save the address and a reminder to your phone. Then post a souped-up photo to social media encouraging your friends to <span class="text-nowrap">do the same.</span>
    </div>
    <div class="action">
        <p>
            <button class="btn btn-default action-btn black" type="button" onclick="action.ready.start()">Start</button>
        </p>
        <p>
            <button class="btn btn-default action-btn black" type="button" data-toggle="modal" data-target="#introModal">How it Works</button>
        </p>
    </div>
</div>